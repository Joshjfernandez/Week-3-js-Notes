// Create a function minMaxAvg that will take an Array as it paramenter
// It will return the smallest item in the Array
// It will return the largest item in the Array
// It will return the average of all the items in the Array

function minMaxAvg(arr){
  var min //2
  var max // 2
  var avg // 1
  var sum = 0
  // Do your operation here
  
  // 1) Calculate the average
  for (var i = 0; i < arr.length; i++){
    //For each round, add the numbers
    sum += arr[i]
  }
  avg = sum / arr.length;
  
  // 2) Calculate the max
  for (var i = 0; i < arr.length; i++){
    if (arr[i]> max){
      max = arr[i]
    }
  }
  
  // 3) Calculate the min
  return [min, max, avg]
  for (var i = 0; i < arr.length; i++){
    if (arr[i]> min){
      min = arr[i]
    }
}
console.log(minMaxAvg([4,1,6,2,7,3,9]))
  
